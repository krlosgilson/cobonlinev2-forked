<h1 class="my-5 text-center">Sistema de Cobrança ON-Line</h1>  

<div class="row">

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-success shadow h-100 py-2" style=" border-left: 8px solid #000000;">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
              Qtd Cliente (Diário)
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= ItemAdvance.items_admin.count  %>
            </div>
            <div class="col-auto">
              <i class="fas fa-calendar fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>  

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-primary shadow h-100 py-2" style=" border-left: 8px solid #000000;">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
              Clientes Cobrados (Diário)
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= ItemAdvance.items_admin.where("Date(item_advances.date_payment) = ?", Date.current).count  %>
            </div>
            <div class="col-auto">
              <i class="fas fa-calendar fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>  

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-warning shadow h-100 py-2"style=" border-left: 8px solid #000000;">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
              Total (Diário)
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= ItemAdvance.items_admin.where("Date(item_advances.date_payment) = ?", Date.current).sum('item_advances.price')  %>
            </div>
            <div class="col-auto">
              <i class="fas fa-calendar fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>  

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-danger shadow h-100 py-2"style=" border-left: 8px solid #000000;">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
              Total Cobrado
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= ItemAdvance.items_admin.where("Date(item_advances.date_payment) = ?", Date.current).sum('item_advances.value_payment')  %>
            </div>
            <div class="col-auto">
              <i class="fas fa-calendar fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>  

  <div class="">
    <div class="card border-default shadow h-100 py-2">
      <div class="card-header">
        Listatem Diária
      </div>
      <div class="card-body">
        <%= render '/advances/item_advances', item_advances: ItemAdvance.items_admin, dasboard: true %>
      </div>
    </div>
  </div>
</div>

