    <strong>Saldo Devedor:</strong> <%= @item_advance.advance.balance.to_f %> <br />
  
    <hr>
    
    <div class="mb-3">
      <%= label_tag :value_payment, "Valor Pago", class: "form-label" %>
      <%= text_field_tag :value_payment, nil, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= label_tag :note, "Note", class: "form-label" %>
      <%= text_field_tag :note, nil, class: "form-control" %>
    </div>

    <%= f.submit "Baixar", class: "btn btn-primary" %>

  <% end %>

<% end %>
